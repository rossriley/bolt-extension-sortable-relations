{
    "name": "rossriley/sortable-relations",
    "description": "An extension to allow relations to be sortable",
    "type": "bolt-extension",
    "require": {
        "bolt/bolt": ">1.9,<3.0.0"
    },
    "license": "MIT",
    "authors": [{"name": "Ross Riley", "email": "riley.ross@gmail.com"}
    ],
    "keywords": [
        "relations", "sortable"
    ],
    "minimum-stability":"dev",
    "prefer-stable":true,
    "autoload": {
        "files": [
            "init.php"
        ],
        "psr-4": {
            "Bolt\\Extensions\\Ross\\SortableRelations\\": "",
            "Bolt\\Extensions\\Ross\\SortableRelations\\Tests\\": "tests"
        }
    },
    
    "extra": {
        "bolt-assets": "assets",
        "bolt-screenshots": [
            "screenshot.png"
        ]
    }
